    transform: translateY(-5px);
    background-color: #d7f9db;
    mix-blend-mode: darken;
}
.about .wrapper1 p{
    text-align: center;
    color: #354573;
    font-size: 20px;
}
.about .wrapper1 div{
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    width: 20%;
    height: 100%;
    left: 0;
}
.about .wrapper1 div img{
    height: 500px;
    width: 500px;
    background-color: #d7f9db;
    mix-blend-mode: darken;
    object-fit: cover;
    position:absolute;
}
.team{
    background-color: #354573;
    height: 95vh;
    top: 0;
}
.team .teamsection .team-head{
    color: #d7f9db9d;
}
.team .teamsection:hover .team-head{
    color: #d7f9db;
}
.team .teamsection:hover .team-head::after{
    background-color: #d7f9db;
    left: -5%;
    width: 110%;
}
.team .teamsection .team-head::after{
    content: '';
    position: absolute;
    height: 10px;
    width: 0%;
    border-bottom-left-radius: 10px;
    transition: all 1s ease;
    border-bottom-right-radius: 10px;
    top: 70%;
    left: 50%;
    background-color: #354573;
}
.team .team-members{
    width: 90%;
    height: 70%;
    position: relative;
    background-color: #3e4d7a;
    box-shadow: 4px 4px 8px #d7f9db7a;
    border-radius: 30px;
    bottom: 5px;
    transition: all 1s ease;
    display: flex;
    align-items: center;
    justify-content: space-evenly;
}
.team .team-members:hover{
    box-shadow: 4px 10px 10px #d7f9db7a;
    bottom: 10px;
}
.team .team-members .member{
    position:relative;
    height: 90%;
    width: 22%;
    cursor: pointer;
    overflow: hidden;
    bottom: 5px;
    transition: all .5s ease;
    border-radius: 20px;
    background-color: #d7f9db80;
}
.team .team-members .member .img{
    height: 55%;
    width: 80%;
    top: 25%;
    position: absolute;
    transition: all 1s ease;
    left: 10%;
    background-color: #d7f9db;
    border-radius: 50%;
}
.team .team-members .member .img img{
    position: relative;
    height: 80%;
    width: 80%;
    left: 10%;
    border-radius: 50%;
    top: 10%;
    object-fit: cover;
    transition: all 1s ease;
}
.team .team-members .member .name{
    width: 100%;
    text-align: center;
    font-size: 20px;
    top: 10%;
    font-weight: 500;
    color: #d7f9db;
    position:absolute;
}
.team .team-members .member:hover .img{
    border-radius: 0;
}
.team .team-members .member:hover .img img{
    border-radius: 0;
}
.team .team-members .member:hover .displ{
    top: 70%;
}
.team .team-members .member .displ{
    background-color: #79aa8080;
    width: 100%;
    text-align: center;
    top: 100%;
    position:absolute;
    color: #d7f9db;
    font-weight: 700;
    backdrop-filter: blur(5px);
    padding: 20px;
    left: -10px;
    transition: all 1s ease;
}
.email{
    height: 140vh;
    top: 0;
    position:relative;
    width: 100%;
    background: linear-gradient(to bottom right, white, #d7f9db);
    display: flex;
    justify-content: center;
    align-items: center;
    bottom: 50px;
}
.email .form{
    height: 70%;
    width: 90%;
    padding: 10px;
    position:relative;
    border-radius: 20px;
    border: 3px dashed #354573;
    display: flex;
    justify-content: space-evenly;
    align-items: center;
}
.email .form .box{
    position: relative;
    width: 47%;
    height: 90%;
}
.email .form .f1{
    text-align: left;
    color: #354573;
}
.email .form .f1 .info .header{
    font-weight: 700;
    left: 20px;
    position:relative;
    font-size: 30px;
    text-transform: uppercase;
}
.email .form .f1 .info .textual{
    font-size: 25px;
    position:relative;
    left: 50px;
}
.email .form .textual1{
    font-weight: 300;
    position:relative;
    left: 10px;
    font-size: 30px;
    padding-bottom: 30px;
}
.email .form .f2 .formm .text1{
    width: 90%;
    font-size: 20px;
    color:#354573;
    text-align: center;
    font-weight: 300;
    left: 5%;
    margin-top: 10px;
    position: relative;
    height: 45px;
}
.email .form .f2 .formm .text2{
    margin-top: 10px;
    resize: none;
    color:#354573;
    width: 90%;
    left: 5%;
    height: 180px;
    position: relative;
    font-size: 20px;
    text-align: center;
    font-weight: 300;
}
.email .form .f2 .formm button{
    left: 5%;
    height: 80px;
    cursor: pointer;
    width: 90%;
    position: relative;
    outline: none;
    font-weight: 700;
    font-size: 50px;
    margin-top: 10px;
}
.footer{
    top: 0;
    position: relative;
    font-size: 30px;
    height: 45px;
    color: #d7f9db;
    font-weight: 300;
    padding-top: 10px;
    background-color: #354573;
}
.visible{
    position:relative;
    width: 87%;
    left: 5%;
    height: 20px;
    background-color: #354573;
    border-radius: 5px;
    color: #d7f9db;
    padding: 10px;
    text-align: center;
    font-weight: 500;
}
.fa-times{
    position:absolute;
    right: 10px;
    color: #d7f9dba1;
    top: 10px;
    cursor: pointer;
}
.fa-times:hover{
    color: #d7f9db;
}
.usernameinv{
            display:none;
        }
    </style>
</head>
<body>
    <section class="head">
        <div class="logosect">
            <span class="logo">Q <div class="box"> <div class="cir"></div></div></span>
        </div>
        <nav>
            <ul>
                <li><form action="/dashboard" method="POST"><button type="submit">Dashboard</button> <input type="text" class="usernameinv" value={{user}} name="users"></form></li>               
