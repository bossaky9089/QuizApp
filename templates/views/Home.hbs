    font-weight: 800;
    flex-direction: column;
    justify-content: space-around;
    text-align: center;
    color: #d7f9db;
}
.about, .team, .email{
    width: 100%;
    position: relative;
    display: flex;
    top: 0;
    flex-direction: column;
    align-items:center;
    justify-content: space-evenly;
}
.about{
    background: linear-gradient(to bottom right, white, #d7f9db);
    height: 200vh;
}
.about .aboutselect .about-head, .team .teamsection .team-head, .email .emailselect .email-text{
    font-size: 50px;
    padding-top: 50px;
    padding-bottom: 50px;
    position: relative;
    text-transform: uppercase;
    transition:all 1s ease;
    cursor: pointer;
    font-weight: 700;
}
.about .aboutselect .about-head, .email .emailselect .email-text{
    color: #3545739d;
}
.about .aboutselect .about-head::after, .email .emailselect .email-text::after{
    content: '';
    position: absolute;
    height: 10px;
    width: 0%;
    border-bottom-left-radius: 10px;
    transition: all 1s ease;
    border-bottom-right-radius: 10px;
    top: 70%;
    left: 50%;
}
.about .aboutselect .about-head::after,.email .emailselect .email-text::after{
    background-color: #d7f9db;
}
.about .aboutselect:hover .about-head::after,
.email .emailselect:hover .email-text::after{
    left: -5%;
    width: 110%;
    background-color: #354573;
}
.about .aboutselect:hover .about-head,
.email .emailselect:hover .email-text{
    color: #354573;
}
.about .wrapper1{
    display: flex;
    flex-direction: row;
    justify-content: space-evenly;
    width: 90%;
    height: 500px;
    top: 50px;
    border-radius: 30px;
    background-color: #35457310;
    box-shadow: 4px 4px 10px #35457338,
                inset 4px 4px 10px rgba(255, 255, 255, 0.192);
    margin-bottom: 20px;
    align-items: center;
    background-color: #d7f9db;
    mix-blend-mode: darken;
    transition: all .5s ease;
}
.about .wrapper1:hover{
    box-shadow: 4px 14px 10px #35457338,
